<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Simple Smoke Test Suite Cross Browser Testing" >

    <listeners>
        <listener class-name="com.sample.report.custReportListener"/>
        <listener class-name="com.sample.report.testListener"/>
        <listener class-name="com.sample.report.reportListener"/>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
    </listeners>

    <test name="Smoke Test in Chrome">
        <parameter name="browser" value="Chrome" />
        <classes>
            <class name="com.demoQATest.DemoQAElementTest" />
            <class name="com.demoQATest.DemoQAFormsPageTest" />
            <class name="com.demoQATest.DemoQAalertFrameWindowTest"/>
        </classes>
    </test>
    <test name ="Smoke Test in FirefoxTest">
        <parameter name="browser" value="Firefox" />
        <classes>
            <class name="com.demoQATest.DemoQAElementTest" />
            <class name="com.demoQATest.DemoQAFormsPageTest" />
            <class name="com.demoQATest.DemoQAalertFrameWindowTest"/>
        </classes>
    </test>
    <test name="Smoke Test in Safari Test">
        <parameter name="browser" value="safari" />
        <classes>
            <class name="com.demoQATest.DemoQAElementTest" />
            <class name="com.demoQATest.DemoQAFormsPageTest" />
            <class name="com.demoQATest.DemoQAalertFrameWindowTest"/>
        </classes>
    </test>
</suite>